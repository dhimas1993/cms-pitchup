<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="false">&times;</span>
          </button>
        </div>
  
        <form action="/teams/?_method=PUT" method="POST"" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="form-group">
              <label for="name">Name</label>
              <input required name='name' type="text" class="form-control name" id="exampleFormControlInput" placeholder="Enter Name">
            </div>
            <div class="form-group">
              <label for="name">Title</label>
              <input required name='title' type="text" class="form-control title" id="exampleFormControlInput" placeholder="Enter Name">
            </div>
            <div class="form-group">
              <label for="name">Linkedin Url</label>
              <input required name="linkedinurl" type="text" class="form-control linkedinUrl" id="exampleFormControlInput" placeholder="Enter Name">
            </div>
            <div class="form-group">
              <label for="name">Profile photo</label>
              <input name='image' type="file" class="form-control">
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="id" class="id">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
        
      </div>
    </div>
  </div>