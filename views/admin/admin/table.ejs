<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            Add Admin User
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Startup</th>
                        <th>LinkedIn</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>No</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Startup</th>
                        <th>LinkedIn</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% for(let i =0; i < admin.length; i++) {%>
                        <tr>
                            <td><%= i + 1%></td>
                            <td><%= admin[i].firstName %></td>
                            <td><%= admin[i].lastName %></td>
                            <td><%= admin[i].startupName %></td>
                            <td><%= admin[i].linkedinProfile %></td>
                            <td><%= admin[i].email %></td>
                            <td><%= admin[i].role %></td>
                            <td><%= admin[i].status %></td>
                            <td>
                            <form action="admin-user/<%= admin[i]._id %>?_method=DELETE" method="POST">
                                <a  
                                    href="javascript:void()"
                                    type="button"
                                    class="btn btn-warning btn-sm btn-circle button-update"
                                    data-id="<%= admin[i].id %>"
                                    data-firstname="<%= admin[i].firstName %>"
                                    data-lastname="<%= admin[i].lastName %>"
                                    data-startup="<%= admin[i].startupName %>"
                                    data-linkedinprofile="<%= admin[i].linkedinProfile %>"
                                    data-email="<%= admin[i].email %>"
                                    data-status="<%= admin[i].status %>"
                                >
                                    <i class="fas fa-fw fa-edit"></i>
                                </a>
                                
                                <button 
                                    type="submit" 
                                    href="" 
                                    class=" btn btn-danger btn-sm btn-circle"
                                    >
                                    <i class="fas fa-fw fa-trash"></i>
                                </button>
                               
                            </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>