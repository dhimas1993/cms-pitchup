<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update News</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="false">&times;</span>
          </button>
        </div>
        <form action="/news?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="form-group">
              <label for="name">Title</label>
              <input required name='title' type="text" class="form-control title" placeholder="Enter Title">
            </div>
            <div class="form-group">
              <label for="name">Company Name</label>
              <input required name='companyName' type="text" class="form-control companyname" placeholder="Enter Company Name">
            </div>
            <div class="form-group">
              <label for="name">Company Url</label>
              <input required name='companyUrl' type="text" class="form-control companyurl" placeholder="Enter Company Url">
            </div>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="name">Company Logo</label>
              <input name='image' type="file" class="form-control companyLogo">
            </div>
            <div class="form-group">
              <label for="name">Headline Picture</label>
              <input name='image' type="file" class="form-control headlinePicture">
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="id" class="id">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>