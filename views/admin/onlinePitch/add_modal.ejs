<script>
  var button = document.getElementById("add-label");

  button.addEventListener("click", function () {
    var br = document.createElement('br');
    document.getElementById("add-input");
    var input1 = document.createElement('input');
    input1.setAttribute('id', 'label');
    input1.setAttribute('class', 'form-control');
    input1.setAttribute('type', 'text');
    input1.setAttribute('name', 'label');
    input1.setAttribute('placeholder', 'Enter Label');
    document.getElementById("add-input").appendChild(input1);
    document.getElementById("add-input").appendChild(br);
  });
</script>