<!-- Modal -->
<div class="modal fade " id="add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Pitch</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="false">&times;</span>
        </button>
      </div>

      <form action="/online-pitch" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input required name='name' type="text" class="form-control" placeholder="Enter Title Name">
          </div>
          <div class="form-group">
            <label for="name">Logo</label>
            <input required name='file' type="file" class="form-control" placeholder="Choose Logo Company">
          </div>
          <div class="form-group">
            <label for="body">Description</label>
            <textarea required name="body" class="form-control" cols="30" rows="10"
              placeholder="Enter Description"></textarea>
          </div>
